IF EXTRACT(DAY FROM SYSDATE) > 26 THEN
    AGE_IN_MONTHS := MONTHS_BETWEEN(SYSDATE, TO_DATE(DATE_OF_BIRTH, 'DD-MM-YYYY'));
ELSE
    AGE_IN_MONTHS := MONTHS_BETWEEN(
        TO_DATE(
            '26-' || LPAD(EXTRACT(MONTH FROM SYSDATE), 2, '0') || '-' || EXTRACT(YEAR FROM SYSDATE), 
            'DD-MM-YYYY'
        ),
        TO_DATE(DATE_OF_BIRTH, 'DD-MM-YYYY')
    );
END IF;